<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Splashscreen information-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/colorYellow</item>
        <item name="android:background">@drawable/ic_spoiler_rambo_splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Custom Light theme style-->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:textViewStyle">@style/LightThemeTextView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Custom Light theme style components-->
    <style name="LightThemeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/colorBlack</item>
    </style>

    <!--Custom dark theme style -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorDarkAccent</item>
        <item name="colorPrimaryDark">@color/colorDarkAccent</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:textViewStyle">@style/DarkThemeTextView</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Custom Dark theme style components -->
    <style name="DarkThemeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/colorWhite</item>
    </style>
</resources>
